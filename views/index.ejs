<%- include('partials/header') %> 
<%- include('partials/navbar') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-sm-12">
          <div class="card mt-5" style="width: 24rem;">
            <img src="<%= data.images[0].url %> " class="card-img-top" alt="<%= data.images[0].url %> " style="width: 100%;" />
            <div class="card-body">
              <h5 class="card-title"><%= data.display_name %></h5>
              <p class="card-text">Followers : <%= data.followers.total %></p>
              <a href="<%= data.external_urls.spotify %> " class="btn btn-primary" target="_blank">More Information</a>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-sm-12 my-5">
          <iframe style="border-radius:12px" src="https://open.spotify.com/embed/playlist/37i9dQZF1DX7yD3GiuEB7x?utm_source=generator" width="100%" height="435" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
        </div>
      </div>
    </div>

<%- include('partials/footer') %> 